import java.util.Scanner;

public class ArithmeticCalculator {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        char continueChoice = 'Y';

        while (Character.toUpperCase(continueChoice) != 'N') {
            // 1. Display Menu
            System.out.println("Press any following key to perform an arithmetic operation:");
            System.out.println("1 - Addition");
            System.out.println("2 - Subtraction");
            System.out.println("3 - Multiplication");
            System.out.println("4 - Division");

            int choice = scanner.nextInt();

            // 2. Input Handling
            System.out.print("Enter Value 1: ");
            double val1 = scanner.nextDouble();
            System.out.print("Enter Value 2: ");
            double val2 = scanner.nextDouble();

            // 3. Switch-Case Control Structure
            switch (choice) {
                case 1:
                    System.out.println(val1 + " + " + val2 + " = " + add(val1, val2));
                    break;
                case 2:
                    System.out.println(val1 + " - " + val2 + " = " + subtract(val1, val2));
                    break;
                case 3:
                    System.out.println(val1 + " * " + val2 + " = " + multiply(val1, val2));
                    break;
                case 4:
                    if (val2 != 0) {
                        System.out.println(val1 + " / " + val2 + " = " + divide(val1, val2));
                    } else {
                        System.out.println("Error: Division by zero is not allowed.");
                    }
                    break;
                default:
                    System.out.println("Invalid choice. Please select 1-4.");
            }

            // 4. Continue/Exit Prompt
            System.out.print("Do you want to continue again (Y/N)? ");
            continueChoice = scanner.next().charAt(0);
            System.out.println(); // Adds a newline for clarity
        }

        System.out.println("Program terminated. Goodbye!");
        scanner.close();
    }

    // Core Logic: Separate Methods
    public static double add(double a, double b) {
        return a + b;
    }

    public static double subtract(double a, double b) {
        return a - b;
    }

    public static double multiply(double a, double b) {
        return a * b;
    }

    public static double divide(double a, double b) {
        return a / b;
    }
}
